<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budgie.CreateBudgetPage"
             Title="Create New Budget Page"
             xmlns:local="clr-namespace:Budgie"
             x:DataType="local:CreatePageViewModel">

    <ScrollView>
        <StackLayout
            Orientation="Vertical"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"/>

            <Label
                Text="Lets Create A Budget!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Spacing="25"
                Padding="30">

                <Entry
                    Placeholder="Budget Name"
                    Text="{Binding budgetName}"
                    PlaceholderColor="Gray"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center"/>

                <Picker
                    SelectedItem="{Binding budgetType}"
                    Title="Budget Type"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Daily</x:String>
                                <x:String>Weekly</x:String>
                                <x:String>Monthly</x:String>
                                <x:String>Yearly</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                <Entry
                    Placeholder="Take Home Amount USD"
                    Text="{Binding takeHomeAmt}"
                    PlaceholderColor="Gray"
                    Keyboard="Numeric"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center"/>
            </StackLayout>

            <StackLayout
                Spacing="10">

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="60">

                    <Label
                    Text="Enter expense type:"
                    FontSize="14"/>

                    <Label
                   Text="Enter cost:"
                   FontSize="14"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="30">

                    <Picker x:Name="expenseTypePickerOne"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Food</x:String>
                                <x:String>Bills</x:String>
                                <x:String>Savings</x:String>
                                <x:String>Recreational</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                    <Entry
                   FontSize="14"
                   WidthRequest="125"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="60">

                    <Label
                    Text="Enter expense type:"
                    FontSize="14"/>

                    <Label
                   Text="Enter cost:"
                   FontSize="14"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="30">

                    <Picker x:Name="expenseTypePickerTwo"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Food</x:String>
                                <x:String>Bills</x:String>
                                <x:String>Savings</x:String>
                                <x:String>Recreational</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                    <Entry
                   FontSize="14"
                   WidthRequest="125"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="60">

                    <Label
                    Text="Enter expense type:"
                    FontSize="14"/>

                    <Label
                   Text="Enter cost:"
                   FontSize="14"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="30">

                    <Picker x:Name="expenseTypePickerThree"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Food</x:String>
                                <x:String>Bills</x:String>
                                <x:String>Savings</x:String>
                                <x:String>Recreational</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                    <Entry
                   FontSize="14"
                   WidthRequest="125"/>

                </StackLayout>
                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="60">

                    <Label
                    Text="Enter expense type:"
                    FontSize="14"/>

                    <Label
                   Text="Enter cost:"
                   FontSize="14"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="30">

                    <Picker x:Name="expenseTypePickerFour"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Food</x:String>
                                <x:String>Bills</x:String>
                                <x:String>Savings</x:String>
                                <x:String>Recreational</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                    <Entry
                   FontSize="14"
                   WidthRequest="125"/>

                </StackLayout>
                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="60">

                    <Label
                    Text="Enter expense type:"
                    FontSize="14"/>

                    <Label
                   Text="Enter cost:"
                   FontSize="14"/>

                </StackLayout>

                <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="30">

                    <Picker x:Name="expenseTypePickerFive"
                    WidthRequest="200"
                    HorizontalTextAlignment="Center">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Food</x:String>
                                <x:String>Bills</x:String>
                                <x:String>Savings</x:String>
                                <x:String>Recreational</x:String>
                                <x:String>Other</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                </Picker>

                    <Entry
                   FontSize="14"
                   WidthRequest="125"/>

                </StackLayout>
            </StackLayout>

            <Button
                Text="Submit budget info"
                TextColor="LimeGreen"
                BackgroundColor="Gray"
                Command="{Binding SubmitFormCommand}"
                HorizontalOptions="Center"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
